rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow resume uploads to resumes folder
    match /resumes/{resumeId} {
      allow create: if request.resource.size < 5 * 1024 * 1024 // 5MB max
                    && request.resource.contentType.matches('application/pdf|application/msword|application/vnd.openxmlformats-officedocument.wordprocessingml.document');
      allow read: if false; // No public read access
      allow update, delete: if false;
    }
    
    // Block all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
